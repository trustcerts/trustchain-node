{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["ESNext.String"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "paths": {
      "@apps/*": ["apps/*"],
      "@shared/*": ["apps/shared/*"],
      "@test/*": ["test/*"],
      "@tc/config": ["libs/config/src"],
      "@tc/config/*": ["libs/config/src/*"],
      "@tc/blockchain": ["libs/blockchain/src"],
      "@tc/blockchain/*": ["libs/blockchain/src/*"],
      "@tc/hash": ["libs/hash/src"],
      "@tc/hash/*": ["libs/hash/src/*"],
      "@tc/invite": ["libs/invite/src"],
      "@tc/invite/*": ["libs/invite/src/*"],
      "@tc/p2-p": ["libs/p2-p/src"],
      "@tc/p2-p/*": ["libs/p2-p/src/*"],
      "@tc/security": ["libs/security/src"],
      "@tc/security/*": ["libs/security/src/*"],
      "@tc/wallet-client": ["libs/wallet-client/src"],
      "@tc/wallet-client/*": ["libs/wallet-client/src/*"],
      "@tc/persist-client": ["libs/persist-client/src"],
      "@tc/persist-client/*": ["libs/persist-client/src/*"],
      "@tc/parse-client": ["libs/parse-client/src"],
      "@tc/parse-client/*": ["libs/parse-client/src/*"],
      "@tc/network-client": ["libs/network-client/src"],
      "@tc/network-client/*": ["libs/network-client/src/*"],
      "@tc/event-client": ["libs/event-client/src"],
      "@tc/event-client/*": ["libs/event-client/src/*"],
      "@tc/parsing": ["libs/parsing/src"],
      "@tc/parsing/*": ["libs/parsing/src/*"],
      "@tc/network": ["libs/network/src"],
      "@tc/network/*": ["libs/network/src/*"],
      "@tc/did": ["libs/did/src"],
      "@tc/did/*": ["libs/did/src/*"],
      "@tc/vc": ["libs/vc/src"],
      "@tc/vc/*": ["libs/vc/src/*"],
      "@tc/core": ["libs/core/src"],
      "@tc/core/*": ["libs/core/src/*"],
      "@tc/template": ["libs/template/src"],
      "@tc/template/*": ["libs/template/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "sdk/**"]
}
